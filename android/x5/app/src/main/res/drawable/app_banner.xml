<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color or gradient for TV banner (16:9). Replace as needed. -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20232A"/>
        </shape>
    </item>

    <!-- Centered app mark; using existing mipmap foreground as a placeholder. -->
    <item
        android:gravity="center"
        android:width="96dp"
        android:height="96dp"
        android:drawable="@mipmap/ic_launcher_foreground"/>
</layer-list>


