<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <!-- 退出对话框 - 占据右侧1/3屏幕 -->
    <LinearLayout
        android:id="@+id/exitDialogContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="afterDescendants">

        <!-- 左侧展示区域（占2/3），显示赞赏二维码与说明，点击关闭对话框 -->
        <LinearLayout
            android:id="@+id/dialogBackdrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#80000000"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:id="@+id/qrDonate"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:contentDescription="打赏二维码"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/donateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="关注抖音@utaotv\n第一时间获取新软上线通知"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- 右侧对话框内容（占1/3） -->
        <LinearLayout
            android:id="@+id/exitDialogContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6000000"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="afterDescendants">

            <!-- 顶部间距 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- 启动首页设置（只保留一个按钮） -->
            <Button
                android:id="@+id/btnStartToggle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="启动电视直播"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/menu_button_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:nextFocusDown="@id/btnFavorite"
                android:nextFocusUp="@id/btnCancel" />

			<!-- 开启/关闭X5内核（会关闭应用） -->
			<Button
				android:id="@+id/btnOpenX5"
				android:layout_width="match_parent"
				android:layout_height="44dp"
				android:text="开启X5内核(会关闭应用)"
				android:textColor="#FFFFFF"
				android:textSize="15sp"
				android:background="@drawable/menu_button_background"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:clickable="true"
				android:layout_marginBottom="10dp"
				android:nextFocusUp="@id/btnStartToggle"
				android:nextFocusDown="@id/hzListInExit" />

			<!-- 开启自启动设置 -->
			<Button
				android:id="@+id/btnAutoStart"
				android:layout_width="match_parent"
				android:layout_height="44dp"
				android:text="开启自启动"
				android:textColor="#FFFFFF"
				android:textSize="15sp"
				android:background="@drawable/menu_button_background"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:clickable="true"
				android:layout_marginBottom="10dp"
				android:nextFocusUp="@id/btnOpenX5"
				android:nextFocusDown="@id/hzListInExit"
				android:visibility="gone" />

			<!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp" />

            <!-- 画质列表（在收藏栏目上方，仅显示选项） -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hzListInExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:overScrollMode="never"/>

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- 收藏按钮 -->
				<Button
                    android:id="@+id/btnFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="10dp"
                    android:text="收藏当前频道"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/menu_button_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
					android:nextFocusUp="@id/btnStartToggle"
                    android:nextFocusDown="@id/btnCancel"
                    android:defaultFocusHighlightEnabled="true" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="取消"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp"
                    android:background="@drawable/menu_button_background"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:nextFocusUp="@id/btnFavorite"
                    android:nextFocusDown="@id/btnStartToggle" />
            </LinearLayout>

            <!-- 提示信息 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="再次按返回键退出应用\n如有问题关注抖音utaotv"
                android:textColor="#999999"
                android:textSize="13sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</layout>